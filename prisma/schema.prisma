generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum TicketType {
  BUG
  SUGGESTION
}

model Contact {
  id        Int        @id @default(autoincrement())
  type      TicketType
  message   String     @db.Text
  email     String
  status    String     @default("PENDING")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rule {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GameSettings {
  id          Int      @id @default(autoincrement())
  roundsToWin Int      @default(10)
  timer       Int      @default(10)
  updatedAt   DateTime @updatedAt
}

model Game {
  id        Int       @id @default(autoincrement())
  startDate DateTime  @default(now())
  endDate   DateTime?
  user_id   Int
}

enum CardType {
  ROLE
  BONUS
  ACTION
}

model Card {
  id          Int      @id @default(autoincrement())
  nom         String
  description String   @db.Text
  type        CardType
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
